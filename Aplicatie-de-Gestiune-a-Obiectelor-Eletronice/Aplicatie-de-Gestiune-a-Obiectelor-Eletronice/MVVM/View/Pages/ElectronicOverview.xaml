<Page x:Class="Aplicatie_de_Gestiune_a_Obiectelor_Eletronice.View.Pages.ElectronicOverview"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Aplicatie_de_Gestiune_a_Obiectelor_Eletronice.View.Pages"
      xmlns:app="clr-namespace:Aplicatie_de_Gestiune_a_Obiectelor_Eletronice"
      mc:Ignorable="d" 
      Background="{StaticResource BackgroundBrush}"
      d:DesignHeight="{StaticResource PageHeight}" d:DesignWidth="{StaticResource PageWidth}"
      Title="ElectronicOverview"
      xmlns:custom="clr-namespace:Aplicatie_de_Gestiune_a_Obiectelor_Eletronice.Controls">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.7*"/>

            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Tip obiect" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="0, 0, 0, 10"/>
            <ComboBox ItemsSource="{Binding ObjectTypesList}" SelectedItem="{Binding CurrentObjectType}" Width="300" Height="30" Margin="0, 0, 0, 30" FontSize="20"/>
            <TextBlock Text="{Binding CodeName}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="0, 0, 0, 10"/>
            <TextBox Name="CodeTBox" Text="{Binding ElectronicObject.Code}" Width="300" Height="30"  Margin="0, 0, 0, 30" FontSize="20"/>
            <TextBlock Text="{Binding OrderName}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="0, 0, 0, 10"/>
            <custom:DigitsTextBox x:Name="OrderTBox" Text="{Binding ElectronicObject.Order}" Width="300" Height="30"  Margin="0, 0, 0, 30" FontSize="20"/>
        </StackPanel>


        <StackPanel Grid.Column="3" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Numar bon miscare" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="0, 0, 0, 10"/>
            <TextBox Name="ReceiptNoTBox" Width="300" Height="30"  Margin="0, 0, 0, 30" FontSize="20"/>
            <TextBlock Text="Data intrarii" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="0, 0, 0, 10"/>
            <TextBox Name="DateTBox" Width="300" Height="30"  Margin="0, 0, 0, 30" FontSize="20"/>
            <TextBlock Text="Denumire obiect" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="0, 0, 0, 10"/>
            <TextBox Name="NameTBox"  Width="300" Height="30"  Margin="0, 0, 0, 30" FontSize="20"/>
            <TextBlock Text="Serie unica obiect" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="0, 0, 0, 10"/>
            <TextBox Name="SerialTBox" Width="300" Height="30"  Margin="0, 0, 0, 30" FontSize="20"/>
        </StackPanel>

        <StackPanel Grid.Column="5" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Tip destinatie" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="0, 0, 0, 10"/>
            <TextBox Width="300" Height="30"  Margin="0, 0, 0, 30" FontSize="20"/>
            <TextBlock Text="Tip destinatie" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="0, 0, 0, 10"/>
            <TextBox Width="300" Height="30"  Margin="0, 0, 0, 30" FontSize="20"/>
        </StackPanel>

        <Button Content="Salveaza" Grid.Column="3" Grid.Row="2" Width="200" Height="100" FontSize="20"/>
    </Grid>
</Page>
