<Page x:Class="Aplicatie_de_Gestiune_a_Obiectelor_Eletronice.View.Pages.EletronicsList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Aplicatie_de_Gestiune_a_Obiectelor_Eletronice.View.Pages"
      mc:Ignorable="d" 
      Background="{StaticResource BackgroundBrush}"
      d:DesignHeight="{StaticResource PageHeight}" d:DesignWidth="{StaticResource PageWidth}"
      Title="EletronicsList">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.2*"/>
            
        </Grid.RowDefinitions>

        <DataGrid
            x:Name="ElectronicOverview"
            IsReadOnly="True"
            AutoGenerateColumns="False"
            Grid.Column="1"
            Grid.Row="1"
            CanUserAddRows="False">
            <!--ItemsSource="{...}"-->

            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="ID"
                    MinWidth="5"
                    Width="*"
                    IsReadOnly="True"
                    CanUserSort="False"
                    CanUserReorder="False"/>
                <DataGridTextColumn
                    Header="Cod"
                    MinWidth="15"
                    Width="*"
                    IsReadOnly="True"
                    CanUserSort="False"
                    CanUserReorder="False"/>
                <DataGridTextColumn
                    Header="Order"
                    MinWidth="15"
                    Width="*"
                    IsReadOnly="True"
                    CanUserSort="False"
                    CanUserReorder="False"/>
                <DataGridTextColumn
                    Header="ReceiptNumber"
                    MinWidth="15"
                    Width="*"
                    IsReadOnly="True"
                    CanUserSort="False"
                    CanUserReorder="False"/>
                <DataGridTextColumn
                    Header="Date"
                    MinWidth="15"
                    Width="*"
                    IsReadOnly="True"
                    CanUserSort="False"
                    CanUserReorder="False"/>
                <DataGridTextColumn
                    Header="Name"
                    MinWidth="15"
                    Width="*"
                    IsReadOnly="True"
                    CanUserSort="False"
                    CanUserReorder="False"/>
                <DataGridTextColumn
                    Header="Serial"
                    MinWidth="15"
                    Width="*"
                    IsReadOnly="True"
                    CanUserSort="False"
                    CanUserReorder="False"/>
                <DataGridTextColumn
                    Header="Destination"
                    MinWidth="15"
                    Width="*"
                    IsReadOnly="True"
                    CanUserSort="False"
                    CanUserReorder="False"/>
                <DataGridTextColumn
                    Header="ReceiverName"
                    MinWidth="15"
                    Width="*"
                    IsReadOnly="True"
                    CanUserSort="False"
                    CanUserReorder="False"/>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
