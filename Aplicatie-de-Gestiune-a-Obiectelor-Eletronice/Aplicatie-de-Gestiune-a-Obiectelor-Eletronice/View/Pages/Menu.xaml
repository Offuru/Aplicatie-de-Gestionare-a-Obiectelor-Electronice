<Page x:Class="Aplicatie_de_Gestiune_a_Obiectelor_Eletronice.View.Pages.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Aplicatie_de_Gestiune_a_Obiectelor_Eletronice.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid Background="#FFAEB8C2">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Width="300">
                <Button x:Name="goToElectronicOverview" Content="Lista electronice" Margin="0, 0, 0, 60" Height="100"/>
                <Button x:Name="goToAddElectronic" Content="Adaugare electronice" Margin="0, 0, 0, 60" Height="100"/>
                <Button x:Name="goToCreateForm" Content="Creare formular" Height="100"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
